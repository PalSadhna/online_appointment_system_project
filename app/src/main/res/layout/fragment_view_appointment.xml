<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.patient.ViewAppointmentFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_70sdp"
            android:gravity="center_vertical"
            android:background="@drawable/custom_dashboard"
            android:orientation="horizontal">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Appointment Detail"
                android:fontFamily="@font/poppins_semi_bold"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textColor="#fff"
                android:textSize="@dimen/_15ssp"
                tools:ignore="HardcodedText" />

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_20sdp"
            tools:listitem="@layout/patient_appointment_recycler_item"
            android:paddingBottom="@dimen/_50sdp"
            android:id="@+id/recyclerAppointment"/>
    </LinearLayout>




</LinearLayout>